@using E_Commerce.Models.DbModels
@{
    ViewBag.Title = "Edit Customer";
}
@model Customer
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/style.css">
</head>
<h2>Edit Customer</h2>
<div class="center-body">
    <form asp-action="Edit" method="post" class="my-card" style="min-width: 500px">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="FullName">Full name</label>
            <input asp-for="FullName" class="form-control" placeholder="Enter customer's full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Enter customer's email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" class="form-control" placeholder="Enter customer's password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Country">Country</label>
            <input asp-for="Country" class="form-control" placeholder="Enter customer's country" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BillingAddress">Billing address</label>
            <input asp-for="BillingAddress" class="form-control" placeholder="Enter customer's billing address" />
            <span asp-validation-for="BillingAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DefaultShippingAddress">Default shipping address</label>
            <input asp-for="DefaultShippingAddress" class="form-control" placeholder="Enter customer's default shipping address" />
            <span asp-validation-for="DefaultShippingAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Phone">Phone</label>
            <input asp-for="Phone" class="form-control" placeholder="Enter customer's phone number" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <br />
        <center>
            <button type="submit" class="my-button">Update</button>
        </center>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}