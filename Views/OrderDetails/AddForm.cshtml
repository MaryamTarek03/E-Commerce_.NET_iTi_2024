@using E_Commerce.Models.DbModels
@{
    ViewBag.Title = "Confirm Order";
}
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/style.css">
</head>
<h2>Confirm Order</h2>
@model OrderDetail
<div class="center-body">
    <form asp-action="Add" method="post" class="my-card" style="min-width:500px">
        <div class="form-group">
            <input asp-for="OrderId" class="form-control" hidden />
        </div>

        <div class="form-group col-md-6">
            <label for="inputState">Product name</label>
            <select asp-for="ProductId" class="form-control">
                @foreach (Product item in ViewBag.Products)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Sku"></label>
            <input asp-for="Sku" class="form-control" />
            <span asp-validation-for="Sku" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Quantity">Quantity</label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <br />
        <center>
            <button type="submit" class="my-button">Add</button>
        </center>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
