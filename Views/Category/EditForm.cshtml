@using E_Commerce.Models.DbModels
@{
    ViewBag.Title = "Edit Category";
}
@model Category

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/style.css">
</head>

<h2>Edit Category</h2>

<div class="center-body">
    <form asp-action="Edit" method="post" class="my-card" style="min-width: 500px">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter category's name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Thumbnail">Thumbnail</label>
            <input asp-for="Thumbnail" class="form-control" placeholder="Enter category's thumbnail link" />
            <span asp-validation-for="Thumbnail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" placeholder="Enter category's description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <br />
        <center>
            <button type="submit" class="my-button">Update</button>
        </center>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}