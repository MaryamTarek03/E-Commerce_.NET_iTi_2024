@using E_Commerce.Models.DbModels
@{
    ViewBag.Title = "Category Details";
}
@model Category

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/style.css">
</head>

<div class="center-body">
    <div class="glowy-card">
        <center><h2>@Model.Name</h2> <br /><img src=@Model.Thumbnail width="150" /></center>
        <hr />
        <dl class="dl-horizontal">

            <dt>Description</dt>
            <dd>@Model.Description</dd>
        </dl>
    </div>
</div>

<center>
    <a asp-action="EditForm" asp-controller="Category" asp-route-id=@Model.Id>
        <button class="my-button" role="button" style="display: inline; background: #028875"> <span class="text">Edit</span></button>
    </a>
    <a asp-action="Delete" asp-controller="Category" asp-route-id=@Model.Id>
        <button class="my-button" role="button" style="display: inline; background: #E53935"> <span class="text">Delete</span></button>
    </a>
</center>

<p>
    @Html.ActionLink("Back to List", "GetAll")
</p>