@using E_Commerce.Models.DbModels

@{
    ViewBag.Title = "Edit Order";
}
@model Order
<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/css/style.css">
</head>
<h2>Edit Order</h2>
<div class="center-body">
    <form asp-action="Edit" method="post" class="my-card" style="min-width: 500px">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" placeholder="Enter the order amount" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ShippingAddress">Shipping Address</label>
            <input asp-for="ShippingAddress" class="form-control" placeholder="Enter the shipping address" />
            <span asp-validation-for="ShippingAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OrderAddress">Order Address</label>
            <input asp-for="OrderAddress" class="form-control" placeholder="Enter the order address" />
            <span asp-validation-for="OrderAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OrderEmail">Order Email</label>
            <input type="email" asp-for="OrderEmail" class="form-control" placeholder="Enter the order email" />
            <span asp-validation-for="OrderEmail" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OrderDate">Order Date</label>
            <input asp-for="OrderDate" class="form-control" placeholder="Enter the order date" />
            <span asp-validation-for="OrderDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="OrderStatus">Order Status</label>
            <input asp-for="OrderStatus" class="form-control" placeholder="Enter the order status" />
            <span asp-validation-for="OrderStatus" class="text-danger"></span>
        </div>

        <div class="form-group col-md-6">
            <label for="inputState">Customer Name</label>
            <select asp-for="CustomerId" class="form-control">
                @foreach (Customer item in ViewBag.Customers)
                {
                    <option value="@item.Id">@item.FullName</option>
                }
            </select>
        </div>
        <br />
        <center>
            <button type="submit" class="my-button">Update</button>
        </center>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
